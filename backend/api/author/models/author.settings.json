{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "name": "author",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "password": {
      "type": "password",
      "required": true,
      "private": true
    },
    "profile_image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "comments": {
      "via": "author",
      "collection": "comment"
    },
    "articles": {
      "collection": "article",
      "via": "author"
    }
  }
}
